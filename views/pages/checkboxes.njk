{% extends "layouts/journey-fullwidth.njk" %}

{% from "casa/components/checkboxes/macro.njk" import casaGovukCheckboxes with context %}

{% block casaPageTitle %}
  {{ t('checkboxes:pageTitle') }}
{% endblock %}

{% block journey_form %}
  {{ casaGovukCheckboxes({
    name: "boxes",
    casaErrors: formErrors,
    casaValue: formData.boxes,
    fieldset: {
      legend: {
        text: t('checkboxes:boxes.label'),
        isPageHeading: true,
        classes: "govuk-fieldset__legend--xl"
      }
    },
    hint: {
      text: t('checkboxes:boxes.hint')
    },
    items: [{
      value: "option1",
      text: t('checkboxes:boxes.options.option1')
    },{
      value: "option2",
      text: t('checkboxes:boxes.options.option2')
    }, {
      value: "option3",
      text: t('checkboxes:boxes.options.option3')
    }, {
      value: "option4",
      text: t('checkboxes:boxes.options.option4')
    }]
  }) }}

{% endblock %}
