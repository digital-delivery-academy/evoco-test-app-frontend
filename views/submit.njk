{% extends "layouts/custom-main.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}

{% block casaPageTitle %}
  {{ t('submit:pageTitle') }}
{% endblock %}

{% block content %}
  <form action="{{ casa.mountUrl }}submit" method="post">
    <input type="hidden" name="_csrf" value="{{ casa.csrfToken }}">
    <input type="hidden" name="contextid" value="{{ activeContextId }}">

    <h1 class="govuk-heading-xl">{{ t('submit:h1') }}</h1>

    <div class="govuk-form-group">
      <p class="govuk-body">
        This is the final submission page; if you are happy with your choices click the submit button below
      </p>
    </div>

    <div class="govuk-button-group casa-form-control-block">
      {{ govukButton({
        attributes: {
          id: 'continue-button'
        },
        text: t('common:form.buttons.saveChanges.label') if params.inEditMode else t('common:form.buttons.submit.label'),
        preventDoubleClick: true
      }) }}

      <a href="{{ casa.mountUrl }}review" class="govuk-link govuk-link--no-visited-state">{{ t('common:form.buttons.cancel.label') }}</a>
    </div>
  </form>
{% endblock %}
